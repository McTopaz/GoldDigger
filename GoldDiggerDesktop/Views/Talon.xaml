<UserControl x:Class="GoldDiggerDesktop.Views.Talon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldDiggerDesktop.Views"
             xmlns:vm="clr-namespace:GoldDiggerDesktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:vmTalon />
    </UserControl.DataContext>
    
    <Grid>
        <Border Margin="4" BorderBrush="White" Background="Red" BorderThickness="4" CornerRadius="8">
            <Border Margin="6" Background="White" BorderBrush="White" BorderThickness="3" CornerRadius="8" HorizontalAlignment="Center" Height="125">
                <StackPanel Orientation="Horizontal">
                    <Separator Width="3" Visibility="Hidden" />
                    <Image Source="/GoldDiggerDesktop;component/Images/Cards/Backside.png" />
                    <Separator Width="3" Visibility="Hidden" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
