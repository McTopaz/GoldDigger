<UserControl x:Class="GoldDiggerDesktop.Views.TwoPlayers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldDiggerDesktop.Views"
             xmlns:vm="clr-namespace:GoldDiggerDesktop.ViewModels"
             xmlns:view="clr-namespace:GoldDiggerDesktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1100" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:vmTwoPlayers />
    </UserControl.DataContext>
    
    <DockPanel LastChildFill="True">
        
        <!-- Remote player -->
        <view:LowerPlayerArea DockPanel.Dock="Top" />

        <!-- Local player -->
        <view:LowerPlayerArea DockPanel.Dock="Bottom" />

        <!-- Deck -->
        <DockPanel LastChildFill="True">
            <Separator Height="10" Visibility="Hidden" DockPanel.Dock="Top" />
            <Separator Height="10" Visibility="Hidden" DockPanel.Dock="Bottom" />
            <view:Deck />
        </DockPanel>

    </DockPanel>
    
</UserControl>
