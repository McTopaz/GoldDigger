<UserControl x:Class="GoldDiggerDesktop.Views.Deck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldDiggerDesktop.Views"
             xmlns:vm="clr-namespace:GoldDiggerDesktop.ViewModels"
             mc:Ignorable="d" 
             Background="Orange"
             d:DesignHeight="300" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:vmDeck />
    </UserControl.DataContext>
    
    <!-- Points -->
    <DockPanel Grid.Row="0" Grid.Column="1" Height="300">
        <Border DockPanel.Dock="Right" Margin="50" Width="200" Height="200" BorderBrush="White" Background="LightGray" BorderThickness="10" CornerRadius="10">
            <Image Source="{Binding DeckImagePath}" Width="50" />
        </Border>
        <TextBlock Foreground="White" FontSize="40" FontWeight="Bold" DockPanel.Dock="Left" Width="130" VerticalAlignment="Center">
            <Run Text="Deck" />
            <Run Text="{Binding Cards}" />
        </TextBlock>
    </DockPanel>
    
</UserControl>
