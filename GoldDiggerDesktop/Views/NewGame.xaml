<UserControl x:Class="GoldDiggerDesktop.Views.NewGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldDiggerDesktop.Views"
             xmlns:vm="clr-namespace:GoldDiggerDesktop.ViewModels"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:vmNewGame />
    </UserControl.DataContext>

    <Grid>
        <Rectangle Margin="10,10,0,0" Fill="DarkGray" RadiusX="8" RadiusY="8"/>
        <Border Margin="4" BorderBrush="White" Background="SaddleBrown" BorderThickness="1,1,1,1" CornerRadius="8,8,8,8">
            <StackPanel Orientation="Vertical">
                
                <!-- Title -->
                <TextBlock Text="Gold digger" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Margin="20" Foreground="Gold" />
                
                <!-- Host -->
                <Border Margin="4" Background="OrangeRed" BorderThickness="0" CornerRadius="8,8,8,8" Width="250">
                    <Button Command="{Binding Host}" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" Height="80" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image />
                                <TextBlock Text="Host" FontSize="30" FontWeight="Bold" Foreground="Black" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>

                <!-- Join -->
                <Border Margin="4" Background="DarkOrange" BorderThickness="0" CornerRadius="8,8,8,8" Width="250">
                    <Button Command="{Binding Join}" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" Height="80" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image />
                                <TextBlock Text="Join" FontSize="30" FontWeight="Bold" Foreground="White" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>

                <!-- Exit -->
                <Border Margin="4" Background="Orange" BorderThickness="0" CornerRadius="8,8,8,8" Width="250">
                    <Button Command="{Binding Exit}" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" Height="80" >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image />
                                <TextBlock Text="Exit" FontSize="30" FontWeight="Bold" Foreground="Gray" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Border>

                <Separator Visibility="Hidden" Height="20" />
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
